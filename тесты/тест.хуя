вкл прелюдия;

про тест_передачи_аргументов_функции(а: цел, б: цел) то
    печать(«Передача аргументов функции: », а + б, «\н»);

про тест_порядка_передачи_аргументов_функции(а: цел, б: цел, в: цел, г: цел) то
    печать(«Порядок передачи аргументов функции: », а, « », б, « », в, « », г, « », «\н»);

про тест_возврата_значения(а: цел, б: цел, в: цел): цел то
    вернуть а + б*в;

про тест_вещественных_чисел() нч
    печать(«Вещественная арифметика: », (17.0*2.0 + 35.0) как цел, «\н»);
    печать(«Вещественное отрицание: », -69.0 мн 0.0, «\н»);
    печать(«Вещественная логика: », 69.0 мн 420.0, « », 69.0 бл 420.0, «\н»);
кц

про баг_при_выделении_локальной_переменной_в_цикле_для() то // некорректно обозначались области видимости
    для пер _ := 1..3 то пер а: цел;

про главная() нч
    печать(«Печать чисел: », 0, «, », 69, «, », 1234567890, «\н»);
    печать(«Печать логических: », 69 == 69, «, », 69 == 420, «\н»);
    печать(«Адрес строки: », адрес(«привет»), «\н»);
    тест_передачи_аргументов_функции(34, 35);
    тест_порядка_передачи_аргументов_функции(1, 2, 3, 4);
    печать(«Тест возврата значения: », тест_возврата_значения(35, 17, 2), «\н»);
    тест_вещественных_чисел();
    баг_при_выделении_локальной_переменной_в_цикле_для();
кц
