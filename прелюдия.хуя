конст ОБЪЁМ = 32;
пер буфер: массив(ОБЪЁМ, цел8);
пер размер: цел;

про печать_числа(число: цел) нч
    если число == 0 нч
        печать(«0»);
        вернуть;
    кц
    размер := 0;
    пока число бл 0 нч
        // СДЕЛАТЬ: размер += 1;
        размер := размер + 1;
        // СДЕЛАТЬ: приоритет бинопов.
        // В данный момент биноп остатка требуется обрамлять в круглые
        // скобки, т.к. приоритеты операций не учитываются вообще.
        буфер[ОБЪЁМ - размер] := ((число%10) + 48) как цел8; // СДЕЛАТЬ: буквенные литералы
        // СДЕЛАТЬ: число /= 10;
        число := число / 10;
    кц
    печать(срез(буфер, ОБЪЁМ - размер, размер));
кц

про главная() нч
    печать_числа(0);
    печать(«\н»);
    печать_числа(69);
    печать(«\н»);
    печать_числа(1234567890);
    печать(«\н»);
кц
