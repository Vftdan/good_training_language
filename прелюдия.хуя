конст ОБЪЁМ = 32;
пер буфер: массив(ОБЪЁМ, цел8);
пер размер: цел;

про печать_цел(число: цел) нч
    если число == 0 нч
        печать(«0»);
        вернуть;
    кц

    размер := 0;
    пока число бл 0 нч
        // СДЕЛАТЬ: размер += 1;
        размер := размер + 1;
        // СДЕЛАТЬ: приоритет бинопов.
        // В данный момент биноп остатка требуется обрамлять в круглые
        // скобки, т.к. приоритеты операций не учитываются вообще.
        буфер[ОБЪЁМ - размер] := ((число%10) + 48) как цел8; // СДЕЛАТЬ: буквенные литералы
        // СДЕЛАТЬ: число /= 10;
        число := число / 10;
    кц

    печать(срез(буфер, ОБЪЁМ - размер, размер));
кц

про печать_лог(условие: лог) нч
    если условие нч
        печать(«истина»);
        вернуть;
    кц
    печать(«ложь»);
кц

про тест(а: цел, б: цел) нч
    печать_цел(а + б);
    печать(«\н»);
кц

про главная() нч
    печать_цел(0);          печать(«\н»);
    печать_цел(69);         печать(«\н»);
    печать_цел(1234567890); печать(«\н»);
    печать(«----------\н»);
    печать_лог(69 == 69);   печать(«\н»);
    печать_лог(69 == 420);  печать(«\н»);
    печать(«----------\н»);
    тест(34, 35);
кц
