конст ОБЪЁМ = 32;
пер буфер: массив(ОБЪЁМ, цел8);
пер размер: цел;

// СДЕЛАТЬ: загрузка модуля «прелюдия» (я пока не знаю как)
// СДЕЛАТЬ: ввести функцию печать_строки, которая делает системный вызов SYS_write

про печать_цел(число: цел) нч
    если число == 0 нч
        печать(«0»);
        вернуть;
    кц

    размер := 0;
    пока число бл 0 нч
        // СДЕЛАТЬ: размер += 1;
        размер := размер + 1;
        // СДЕЛАТЬ: приоритет бинопов.
        // В данный момент биноп остатка требуется обрамлять в круглые
        // скобки, т.к. приоритеты операций не учитываются вообще.
        буфер[ОБЪЁМ - размер] := ((число%10) + 48) как цел8; // СДЕЛАТЬ: буквенные литералы
        // СДЕЛАТЬ: число /= 10;
        число := число / 10;
    кц

    печать(срез(буфер, ОБЪЁМ - размер, размер));
кц

про печать_лог(условие: лог) нч
    если условие нч
        печать(«истина»);
        вернуть;
    кц
    печать(«ложь»);
кц

про тест(а: цел, б: цел) нч
    печать(а + б, «\н»);
кц

про главная() нч
    печать(«Печать чисел:      », 0, «, », 69, «, », 1234567890, «\н»);
    печать(«Печать логических: », 69 == 69, «, », 69 == 420, «\н»);
    печать(«----------\н»);
    тест(34, 35);
кц
