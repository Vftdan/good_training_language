конст ОБЪЕМ_БУФЕРА_ПЕЧАТИ = 32;
пер буфер_печати: массив(ОБЪЕМ_БУФЕРА_ПЕЧАТИ) цел(1);
пер размер_буфера_печати: цел;

про печать_числа(число: цел) нч
    если число == 0 нч
        печать(«0»);
        вернуть;
    кц
    размер_буфера_печати := 0;
    пока число бл 0 нч
        // СДЕЛАТЬ: размер_буфера_печати += 1;
        размер_буфера_печати := размер_буфера_печати + 1;
        буфер_печати[ОБЪЕМ_БУФЕРА_ПЕЧАТИ - размер_буфера_печати] := число%10 + 48;
        // СДЕЛАТЬ: число /= 10;
        число := число / 10;
    кц
    печать(строка_из_массива_байт(буфер_печати, ОБЪЕМ_БУФЕРА_ПЕЧАТИ - размер_буфера_печати, размер_буфера_печати));
кц

про главная() нч
    печать_числа(0);
    печать(«\н»);
    печать_числа(69);
    печать(«\н»);
кц
