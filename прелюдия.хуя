конст ОБЪЕМ = 32;
пер буфер: массив(ОБЪЕМ) цел(1);
// СДЕЛАТЬ: описание массивного типа как массив(ОБЪЕМ, цел(1))
// Тип должен быть валидным выражением, чтобы его проще было в
// передавать в функции как значение.
пер размер: цел;

про печать_числа(число: цел) нч
    если число == 0 нч
        печать(«0»);
        вернуть;
    кц
    размер := 0;
    пока число бл 0 нч
        // СДЕЛАТЬ: размер += 1;
        размер := размер + 1;
        буфер[ОБЪЕМ - размер] := слепить(цел(1), число%10 + 48);
        // СДЕЛАТЬ: число /= 10;
        число := число / 10;
    кц
    печать(срез(буфер, ОБЪЕМ - размер, размер));
кц

про главная() нч
    печать_числа(0);
    печать(«\н»);
    печать_числа(69);
    печать(«\н»);
кц
