// Здесь находится «стандартная» библиотека Хорошего Учебного Языка.

// СДЕЛАТЬ: переместить эту константу в локальную область видимости функции печать_цел()
конст ОБЪЁМ = 32;

// СДЕЛАТЬ: переместить буфер в локальную область видимости функции печать_цел()
пер буфер: массив(ОБЪЁМ, цел8);

// СДЕЛАТЬ: ввести функцию печать_строки, которая делает системный вызов SYS_write
// Хотя, мы тогда теряем возможность печатать строки в режиме интерпретации.

про печать_цел(число: цел) нч
    если число == 0 нч
        печать(«0»);
        вернуть;
    кц


    // СДЕЛАТЬ: инициализация локальных переменных
    // пер размер: цел = 0;
    пер размер: цел;
    размер := 0;
    пока число бл 0 нч
        // СДЕЛАТЬ: размер += 1;
        размер := размер + 1;
        буфер(ОБЪЁМ - размер) := (число%10 + 48) как цел8; // СДЕЛАТЬ: буквенные литералы
        // СДЕЛАТЬ: число /= 10;
        число := число / 10;
    кц

    печать(срез(буфер, ОБЪЁМ - размер, размер));
кц

про печать_лог(условие: лог) нч
    если условие нч
        печать(«истина»);
        вернуть;
    кц
    печать(«ложь»); // СДЕЛАТЬ: подсветка режима-хуя.el ломается когда есть ключевое слово внутри стокового литерала с «ёлочками»
кц
