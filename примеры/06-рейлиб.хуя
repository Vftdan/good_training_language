вкл рейлиб;

// СДЕЛАТЬ: шестнадцатеричные литералы
конст ЦВЕТ_ФОНА    = 4279769112; // 0xFF181818
конст ЦВЕТ_КРАСНЫЙ = 4278190335; // 0xFF0000FF

конст ШИРИНА = 50;
конст ВЫСОТА = 50;

пер икс: вещ;
пер игрек: вещ;
пер дельта_времени: вещ;

про главная() нч
    // СДЕЛАТЬ: вещественные литералы
    икс   := 0 как вещ;
    игрек := 0 как вещ;
    открыть_окно(800, 600, адрес(«Привет, Raylib!»));
    установить_целевую_частоту_кадров(60);
    пока не пора_закрыть_окно() нч
        дельта_времени := получить_время_кадра();
        икс   := икс   + ((100 как вещ)*дельта_времени);
        игрек := игрек + ((100 как вещ)*дельта_времени);
        начать_рисовать();
            очистить_фон(ЦВЕТ_ФОНА);
            нарисовать_прямоугольник(икс как цел, игрек как цел, ШИРИНА, ВЫСОТА, ЦВЕТ_КРАСНЫЙ);
        закончить_рисовать();
    кц
    закрыть_окно();
кц
