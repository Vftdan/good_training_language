вкл прелюдия;

пер счет: цел;
конст ЛИМИТ = 100;

про главная() нч
    // // СДЕЛАТЬ: цикл «для»
    // для счет := 1..ЛИМИТ нч
    счет := 1;
    пока счет мн ЛИМИТ + 1 нч // СДЕЛАТЬ: ввести операцию мнрв
        если          счет % 15 == 0 то печать(«ФиззБазз\н»);
        // СДЕЛАТЬ: подумать как сократить конструкцию «иначе то если»
        иначе то если счет % 3 == 0  то печать(«Физз\н»);
        иначе то если счет % 5 == 0  то печать(«Базз\н»);
        иначе то печать(счет, «\н»);
        счет := счет + 1;
    кц
кц
