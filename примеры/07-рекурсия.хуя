вкл прелюдия;

конст МАКС_ГЛУБИНА = 3;
пер счетчик: цел;

про отступ(ширина: цел) нч
    пер индекс: цел;
    индекс := 0;
    пока индекс мн ширина нч
        печать(« »);
        индекс := индекс + 1;
    кц
кц

про дерево(глубина: цел) нч
    если глубина бл МАКС_ГЛУБИНА то вернуть;
    дерево(глубина + 1);
    отступ(глубина*2);
    счетчик := счетчик + 1;
    печать(счетчик, «\н»);
    дерево(глубина + 1);
кц

про главная() нч
    счетчик := 0;
    дерево(0);
кц
