вкл прелюдия;

конст МАКС_ГЛУБИНА = 3;
пер счетчик: нат;

про отступ(ширина: нат) то для пер индекс := 1..ширина то печать(« »);

про дерево(глубина: нат) нч
    если глубина бл МАКС_ГЛУБИНА то вернуть;
    дерево(глубина + 1);
    отступ(глубина*2);
    счетчик := счетчик + 1;
    печать(счетчик, «\н»);
    дерево(глубина + 1);
кц

про главная() нч
    счетчик := 0;
    дерево(0);
кц
